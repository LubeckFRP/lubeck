
name:                lubeck
version:             0.1.0.0
synopsis:            Web front-end for Beautiful Destinations
license:             AllRightsReserved
license-file:        LICENSE
author:              Beautiful Destinations
maintainer:          hans@beautifuldestinations.com
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     Lubeck.FRP
                     , Lubeck.App
                     , Lubeck.Web.History
                     , Lubeck.Drawing
                     , Lubeck.Forms
                     , Lubeck.Html
                     , BD.Api
                     , BD.Types
                     , BD.Data.Account
                     , BD.Data.AdTypes
                     , BD.Data.Ad
                     , BD.Data.AdCampaign
                     , BD.Data.Image
                     , BD.Data.Count
                     , BD.Data.Interaction
                     , BD.Data.SearchPost
                     , BD.Query.PostQuery
  build-depends:       base >=4.8 && <4.9
                     , ghcjs-vdom == 0.2.0.0
                     , ghcjs-ffiqq == 0.1.0.0
                     , ghcjs-base ==0.2.0.0
                     , stm
                     --, contravariant
                     , text
                     , mtl
                     , time
                     , containers
                     , lens
                     , intervals
                     , vector-space
                     , vector-space-points
                     , colour

                     , xml
                     , neat-interpolation
                     , data-default
                     , containers
                     , aeson
                     , bytestring

  hs-source-dirs:      src
  default-language:    Haskell2010
  cpp-options:         -DGHCJS_BROWSER
  ghc-options:         -fno-warn-typed-holes

executable bd-example-app
  main-is:             src/Example.hs
  build-depends:       base >=4.8 && <4.9
                     , lubeck
                     , ghcjs-vdom == 0.2.0.0
                     , ghcjs-base ==0.2.0.0
  default-language:    Haskell2010

