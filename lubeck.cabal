                     , AdPlatform.Pages.PostSearch
                     , AdPlatform.Pages.Login
                     , AdPlatform.Pages.User
                     , AdPlatform.Pages.Campaign
                     , AdPlatform.Pages.ImageLibrary
                     , AdPlatform.Main
                     , Components.Notifications
                     , Components.BusyIndicator
                     , Components.MainMenu
  build-depends:       base >=4.8 && <4.9
                     , virtual-dom
                     , ghcjs-ffiqq == 0.1.0.0
                     , ghcjs-base ==0.2.0.0
                     , stm
                     , contravariant
                     , vector
                     , profunctors
                     , text
                     , mtl
                     , transformers
                     , time
                     , containers
                     , unordered-containers
                     , lens
                     , semigroups
                     , data-interval
                     , vector-space
                     , vector-space-points
                     , colour
                     , xml
                     , neat-interpolation
                     , data-default
                     , containers
                     , aeson
                     , bytestring
                     , monad-parallel

  hs-source-dirs:      src
  default-language:    Haskell2010
  cpp-options:         -DGHCJS_BROWSER
  ghc-options:         -fno-warn-typed-holes

